{
  "manifest_version": 2,
  "name": "Github Downloader",
  "description": "Github Downloader Chrome Extension",
  "version": "1.0.0",
  "icons": {
    "64": "assets/icon-128.png",
    "128": "assets/icon-128.png"
  },
  "browser_action": {
    "default_icon": "assets/icon-128.png",
    "default_title": "Github Downloader",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "permissions": [
    "contextMenus",
    "downloads",
    "storage",
    "notifications",
    "<all_urls>"
  ]
}
